{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "rootDir": "./src",
      "outDir": "./lib",
      "typeRoots": [ "node_modules/@types" ]
    },

    "include": [
        "./src/**/*.ts"
    ]
}